.btn {
  position: relative;
  color: #333;
  background-color: #fff;
  border-radius: 4rpx;
  font-size: 32rpx;
  line-height: 90rpx;
  height: 90rpx;
  box-sizing: border-box;
  text-decoration: none;
  text-align: center;
  transition: .1s ease;
  width: 82%;
  margin: 10rpx 20rpx;
}
.btn:active {
  opacity: .6;
}
.primary {
  border: none;
  color: #fff;
  background-color: #4b0;
}
.warn {
  color: #fff;
  background-color: #f85;
  border: none;
}
.danger {
  color: #fff;
  background-color: #f44;
  border: none;
}
.small {
  display: inline-block;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  border: none;
  width: auto;
}
.mini {
  display: inline-block;
  line-height: 44rpx;
  height: 44rpx;
  font-size: 20rpx;
  border: none;
  width: auto;
}
.large {
  border: none;
  line-height: 100rpx;
  height: 100rpx;
  font-size: 32rpx;
}
.disabled {
  color: #999 !important;
  background: #f8f8f8 !important;
  border-color: #e5e5e5 !important;
  cursor: not-allowed !important;
  opacity: 1 !important;
}
.disabled:active {
  opacity: 1;
}
.isLoading:active {
  opacity: 1;
}
.loading {
  color: transparent;
  opacity: 1;
  display: inline-block;
  width: 28rpx;
  height: 28rpx;
  margin-left: -16rpx;
  border: 6rpx solid #e5e5e5;
  border-color: #666 #e5e5e5 #e5e5e5 #e5e5e5;
  border-radius: 16rpx;
  box-sizing: border-box;
  animation: btn-spin 0.6s linear;
  animation-iteration-count: infinite;
}
@keyframes btn-spin {
  0% {
    transform: rotate(0);
  }
  100% {
    transform: rotate(360deg);
  }
}
