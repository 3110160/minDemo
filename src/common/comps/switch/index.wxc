<template>    <view class="switch switch_{{ checked ? 'on' : 'off' }} switch_{{ disabled ? 'disabled' : '' }}" bindtap="switch" style="background: {{activeColor}}; border-color:{{activeColor}};">        <view class="switch_btn">            <view wx:if="{{loading}}" class="loading"></view>        </view>        <view class="switch_bg"></view>    </view></template><script>    export default {        config: {            usingComponents: {}        },        behaviors: [],        properties: {            checked: {                type: Boolean,                value: false,                observer(checked){                    this.setData({checked:checked})                }            },            disabled: {                type: Boolean,                value: false            },            loading: {                type: Boolean,                value: false            },            activeColor: {                type: String,                value: ''            }        },        data: {            checked:false        },        methods: {            switch: function() {                let data = this.data;                let checked = data.checked;                let loading = data.loading;                let disabled = data.disabled;                if (loading || disabled) return false;                this.triggerEvent('switch', {                    checked: !checked                });            }        }    }</script><style lang="less">    @import "../theme";    .switch {        display: inline-block;        width: 102rpx;        height: 62rpx;        border-radius: 40rpx;        vertical-align: middle;        box-sizing: border-box;        position: relative;        background: @switch_bg;        border:3rpx solid @switch_bg;    }    .switch_btn {        display: inline-block;        width: 56rpx;        height: 56rpx;        background: #ffffff;        box-shadow: 0 6rpx 2rpx 0 rgba(0, 0, 0, 0.1), 0 1rpx 2rpx 0 rgba(0, 0, 0, 0.16), 0 5rpx 16rpx 0 rgba(0, 0, 0, 0.15);        border: solid 1rpx rgba(0, 0, 0, 0.1);        border-radius: 50%;        box-sizing: border-box;        transition: transform 0.35s cubic-bezier(0.45, 1, 0.4, 1);        position: absolute;        top: 0;        left: 0;        z-index: 1;        .loading{            margin: 12rpx 12rpx;            color: transparent;            opacity: 1;            width: 28rpx;            height: 28rpx;            border: 6rpx solid #e5e5e5;            border-color: #666 #e5e5e5 #e5e5e5 #e5e5e5;            border-radius: 16rpx;            box-sizing: border-box;            animation: btn-spin .6s linear;            animation-iteration-count: infinite        }    }    .switch_bg {        display: inline-block;        width: 102rpx;        height: 62rpx;        border-radius: 40rpx;        background: #ffffff;        border: 3rpx solid #e5e5e5;        box-sizing: border-box;        transition: transform 0.35s cubic-bezier(0.45, 1, 0.4, 1);        transform: scale(0);        transform-origin: 50rpx 30rpx;        position: absolute;        top: -2rpx;        left: -2rpx;    }    .switch_on{        .switch_btn {            transform: translateX(43rpx);        }    }    .switch_off{        .switch_bg {            transform: scale(1);        }    }    .switch_disabled {        opacity: 0.4;    }</style>