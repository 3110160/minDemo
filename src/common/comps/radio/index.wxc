<template>
    <view class="radio">
        <block wx:for="{{radioList}}" wx:key="index" wx:for-index="index" wx:for-item="item">
            <view class="radioItem {{item.disabled?'disabled':''}}" data-index="{{index}}" bindtap="onChange">
                <view class="radioBox {{item.value==value?'active':''}}"></view>
                <view class="name">{{item.name}}</view>
            </view>
        </block>
    </view>
</template>

<script>
    export default {
        config: {

        },
        properties: {
            for_key: {
                type: [String],
                value: ''
            },
            for_value: {
                type: [String],
                value: ''
            },
            value: {
                type: [String],
                value: ''
            },
            radioList: {
                type: [Array],
                observer(radioList){
                    let {for_key,for_value} = this.data;
                    radioList.length&&radioList.map((item)=>{
                        item.name=item[for_key];
                        item.value=item[for_value];
                    });
                    this.setData({radioList:radioList})
                }
            }
        },
        data: {

        },
        methods: {
            onChange(e){
                let {radioList} = this.data,
                    index = e.currentTarget.dataset.index,
                    item = radioList[index];
                if(item.disabled) return false;
                this.setData({value:item.value});
                this.triggerEvent('onChange',{value:item.value})
            }
        },
        attached(){

        }

    }
</script>

<style lang="less">
    @import "../theme";
    .radio{
        width: 100%;
        background-color:white;
        border-bottom: 2rpx solid rgba(0, 0, 0, 0.07);
        border-top: 2rpx solid rgba(0, 0, 0, 0.07);
        padding: 0 20rpx;
        box-sizing: border-box;
        .radioItem{
            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: flex-start;
            line-height: 72rpx;
            font-size: 32rpx;
            color: #666666;
            border-bottom: 2rpx solid rgba(0, 0, 0, 0.05);
            &:last-child{
                border-bottom:none;
            }
            .radioBox{
                width: 28rpx;
                height: 28rpx;
                border-radius: 50%;
                border:4rpx solid rgba(0, 0, 0, 0.18);
                margin-right: 20rpx;
                position: relative;
                &::after{
                    content: '';
                    position: absolute;
                    width: 13rpx;
                    height: 13rpx;
                    background-color:rgba(0, 0, 0, 0.18);
                    border-radius: 50%;
                    top: 8rpx;
                    left: 8rpx;
                }
            }
            .active{
                &::after{
                    width: 17rpx;
                    height: 17rpx;
                    background-color:@radio_active;
                    border-radius: 50%;
                    top: 7rpx;
                    left: 7rpx;
                    transition: .2s ease;
                }
            }
        }
        .disabled{
            color: #eeeeee;
            .radioBox{
                border-color:#eeeeee;
                &::after{
                    background-color:#eeeeee;
                }
            }
        }
    }
</style>
