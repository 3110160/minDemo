<template>
    <view class="checkbox">
        <block wx:for="{{checkList}}" wx:key="index" wx:for-index="index" wx:for-item="item">
            <view class="checkItem {{item.disabled?'disabled':''}}" data-index="{{index}}" bindtap="onChange">
                <view class="checkBox {{item.checked?'active':''}}"></view>
                <view class="name">{{item.name}}</view>
            </view>
        </block>
    </view>
</template>

<script>
    Array.prototype.contains = function (obj) {
        let i = this.length;
        while (i--) {
            if (this[i] === obj) {
                return true;
            }
        }
        return false;
    };
    export default {
        config: {

        },
        properties: {
            value: {
                type: [Array],
                value: ''
            },
            checkList: {
                type: [Array],
                observer(checkList){
                    let {value} = this.data;
                    checkList.map((item)=>{
                        if(value.contains(item.value)){
                            item.checked=true;
                        }else {
                            item.checked=false;
                        }
                    });
                    this.setData({checkList:checkList})
                }
            }
        },
        data: {

        },
        methods: {
            onChange(e){
                let {checkList,value} = this.data,
                    index = e.currentTarget.dataset.index,
                    item = checkList[index];
                if(item.disabled) return false;
                if(value.contains(item.value)){
                    value = this._delete(value,item.value)
                }else {
                    value.push(item.value)
                }
                checkList.map((item)=>{
                    if(value.contains(item.value)){
                        item.checked=true;
                    }else {
                        item.checked=false;
                    }
                });
                this.setData({checkList:checkList});
                this.triggerEvent('onChange',{value:value})
            },
            _delete(p=[],value){
               let dex=null;
               p.length&&p.map((item,index)=>{
                   if(item===value){
                       dex =index
                   }
               });
                p.splice(dex,1);
                return p;
            }
        },
        attached(){

        }

    }
</script>

